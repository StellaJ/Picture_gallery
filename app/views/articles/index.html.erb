<div class="hero-unit">

<h1>Article</h1>
<%= link_to("Add new article", {:action => 'new'}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right;">Number of articles: <%= @articles.size %></p>
<table class="table table-striped">
    <tr class="info">
    	<th>Position</th>
        <th>Name of page</th>
    	<th>Title of article</th>
    	<th>Visibility</th>
    	<th>Actions</th>
    </tr>
<% @articles.each do |article|%>
    <tr>
        <td><%= article.position %></td>
    	<td><%= article.page.name %></td>
    	<td><%= article.name %></td>
    	<td class="center"><%= status_of_visibility(article.visibility) %></td>
    	<td class="actions">
    		<%= link_to "Show", {:action => 'show', :id => article.id}, :class => "btn btn-default btn-xs" %>
    		<%= link_to "Edit", {:action => 'edit', :id => article.id}, :class =>"btn btn-default btn-xs" %>
    		<%= link_to "Delete", {:action => 'delete', :id => article.id}, :class =>"btn btn-danger btn-xs" %>
    	</td>
    </tr>
<% end %>
</table>
</div>
