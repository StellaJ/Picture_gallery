<div class="hero-unit">
<h1>Show article</h1>


<table class="table table-striped">

	<tr>
	    <th>Page:</th>
	    <td><%= @articles.page.name %></td>
    </tr>
	<tr>
	    <th>Name</th>
	    <td><%= @articles.name %></td>
    </tr>
    <tr>
	    <th>Position</th>
	    <td><%= @articles.position %></td>
    </tr>
    <tr>
	    <th>It is visible?</th>
	    <td><%= @articles.visibility ? 'Yes' : 'No' %></td>
    </tr>
     <tr>
	    <th>Photo:</th>
	    <td><%= image_tag(@articles.photo) %></td>
    </tr>
    <tr>
	    <th>Content:</th>
	    <td><%= @articles.content %></td>
    </tr>
     <tr>
	    <th>Created:</th>
	    <td><%= @articles.created_at %></td>
    </tr>
     <tr>
	    <th>Update:</th>
	    <td><%= @articles.updated_at %></td>
    </tr>
</table>
<div style="text-align: center;">
	<%= link_to "Back", {:action => 'index'}, :class => 'btn btn-primary' %>
</div>

</div>
