<div class="hero-unit">

<h1>Categories</h1>
<%= link_to("Add new category", {:action => 'new'}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right;">Number of categories: <%= @categories.size %></p>
<table class="table table-striped">
    <tr class="info">
    	<th>Position</th>
    	<th>Name</th>
    	<th>Visibility</th>
    	<th>Page</th>
    	<th>Actions</th>
    </tr>
<% @categories.each do |category|%>
    <tr>
    	<td><%= category.position %></td>
    	<td><%= category.name %></td>
    	<td class="center"><%= status_od_visibility(category.visibility) %></td>
    	<td class="center"><%= category.pages.size %></td>
    	<td class="actions">
    		<%= link_to "Show", {:action => 'show', :id => category.id}, :class => "btn btn-default btn-xs" %>
    		<%= link_to "Edit", {:action => 'edit', :id => category.id}, :class =>"btn btn-default btn-xs" %>
    		<%= link_to "Delete", {:action => 'delete', :id => category.id}, :class =>"btn btn-danger btn-xs" %>
    	</td>
    </tr>
<% end %>
</table>
</div>