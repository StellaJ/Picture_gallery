<h1>New category</h1>
<%= link_to("Back", {:action => 'index'})%>
<%= form_for(:category, :url=>{:action=> 'create'}) do |f| %>

<table>
	<tr>
	    <th><%= f.label(:name) %></th>
	    <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
	    <th><%= f.label(:position) %></th>
	    <td><%= f.select(:position, 1..@counter) %></td>
    </tr>
    <tr>
	    <th><%= f.label(:visibility, "It is visible?") %></th>
	    <td><%= f.check_box(:visibility) %></td>
    </tr>
</table>

<div>
	<%= submit_tag 'Submit' %>
</div>


<% end %>