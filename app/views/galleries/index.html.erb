<div class="hero-unit">

<h1>Gallery</h1>
<%= link_to("Add new gallery", {:action => 'new'}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right;">Number of galleries: <%= @galleries.size %></p>
<table class="table table-striped">
    <tr class="info">
    	<th>Position</th>
        <th>Name of gallery</th>
    	<th>Visibility</th>
    	<th>Actions</th>
    </tr>
<% @galleries.each do |gallery|%>
    <tr>
        <td><%= gallery.position %></td>
    	<td><%= gallery.name %></td>
    	<td class="center"><%= status_of_visibility(gallery.visibility) %></td>
    	<td class="actions">
    		<%= link_to "Show", {:action => 'show', :id => gallery.id}, :class => "btn btn-default btn-xs" %>
    		<%= link_to "Edit", {:action => 'edit', :id => gallery.id}, :class =>"btn btn-default btn-xs" %>
    		<%= link_to "Delete", {:action => 'delete', :id => gallery.id}, :class =>"btn btn-danger btn-xs" %>
    	</td>
    </tr>
<% end %>
</table>
</div>
