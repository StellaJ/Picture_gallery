<div class="hero-unit">
<h1>Show page</h1>


<table class="table table-striped">

	<tr>
	    <th>Category:</th>
	    <td><%= @pages.category.name %></td>
    </tr>
	<tr>
	    <th>Name</th>
	    <td><%= @pages.name %></td>
    </tr>
    <tr>
	    <th>Position</th>
	    <td><%= @pages.position %></td>
    </tr>
    <tr>
	    <th>It is visible?</th>
	    <td><%= @pages.visibility ? 'Yes' : 'No' %></td>
    </tr>
     <tr>
	    <th>Created:</th>
	    <td><%= @pages.created_at %></td>
    </tr>
     <tr>
	    <th>Update:</th>
	    <td><%= @pages.updated_at %></td>
    </tr>
</table>
<div style="text-align: center;">
	<%= link_to "Back", {:action => 'index'}, :class => 'btn btn-primary' %>
</div>

</div>
