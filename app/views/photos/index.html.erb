<div class="hero-unit">

<h1>Gallery</h1>
<%= link_to("Add new photo", {:action => 'new'}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right;">Number of photos: <%= @photos.size %></p>
<table class="table table-striped">
    <tr class="info">
    	<th>Position</th>
        <th>Name of photo</th>
        <th>Photo</th>
        <th>Description [...]</th>
    	<th>Visibility</th>
    	<th>Actions</th>
    </tr>
<% @photos.each do |photo|%>
    <tr>
        <td><%= photo.position %></td>
    	<td><%= photo.name %></td>
    	<td><%= image_tag photo.photo.url(:thumb)%></td>
    	<td><%= truncate(photo.description, :length => 80, :omission => "[...]") %></td>
    	<td class="center"><%= status_of_visibility(photo.visibility) %></td>
    	<td class="actions">
    		<%= link_to "Show", {:action => 'show', :id => photo.id}, :class => "btn btn-default btn-xs" %>
    		<%= link_to "Edit", {:action => 'edit', :id => photo.id}, :class =>"btn btn-default btn-xs" %>
    		<%= link_to "Delete", {:action => 'delete', :id => photo.id}, :class =>"btn btn-danger btn-xs" %>
    	</td>
    </tr>
<% end %>
</table>
</div>
