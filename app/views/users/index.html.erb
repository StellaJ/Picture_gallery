<div class="hero-unit">

<h1>Users</h1>
<%= link_to("Add new user", {:action => 'new'}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right;">Number of users: <%= @user.size %></p>
<table class="table table-striped">
    <tr class="info">
    	<th>User</th>
        <th>First and last name</th>
    	<th>Email</th>
    	<th>Actions</th>
    </tr>
<% @user.each do |user|%>
    <tr>
        <td><%= user.user %></td>
    	<td><%= user.first_name + " " + user.last_name %></td>
    	<td><%= mail_to(user.email) %></td>
    	<td class="actions">
    		<%= link_to "Edit", {:action => 'edit', :id => user.id}, :class =>"btn btn-default btn-xs" %>
    		<%= link_to "Delete", {:action => 'delete', :id => user.id}, :class =>"btn btn-danger btn-xs" %>
    	</td>
    </tr>
<% end %>
</table>
</div>
